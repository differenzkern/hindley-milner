type Bool = True | False

fun neg x = match x {
  | True → False
  | False → True
}

fun or x y = match x {
  | True → True
  | False → y
}

fun and x y = match x {
  | True → y
  | False → False
}

fun xor x y = match x {
  | True → neg y
  | False → y
}

fun if x a b = match x {
  | True → a
  | False → b
}

